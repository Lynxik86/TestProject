<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SecondFragment">

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.android_dev.ui.fragments.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_ChuckFirstFragment"
            app:destination="@id/ChuckFirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_ThirdFragment"
            app:destination="@id/ThirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/ChuckFirstFragment"
        android:name="com.example.android_dev.ui.fragments.ChuckFirstFragment"
        android:label="Chuck First Fragment"
        tools:layout="@layout/chuck_fragment_first">
        <action
            android:id="@+id/action_ChuckFirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_ChuckFirstFragment_to_ItemFragment"
            app:destination="@id/ItemFragment">
            <argument
                android:name="item"
                android:defaultValue="joke"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_ChuckFirstFragment_to_JokeFirstFragment"
            app:destination="@id/JokeFirstFragment" />
    </fragment>

    <fragment
        android:id="@+id/JokeFirstFragment"
        android:name="com.example.android_dev.ui.fragments.JokeFirstFragment"
        android:label="Joke First Fragment"
        tools:layout="@layout/joke_fragment_first">
        <action
            android:id="@+id/action_JokeFirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_JokeFirstFragment_to_ItemFragment"
            app:destination="@id/ItemFragment">
            <argument
                android:name="item"
                android:defaultValue="joke"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_JokeFirstFragment_to_ChuckFirstFragment"
            app:destination="@id/ChuckFirstFragment" />
    </fragment>

    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.example.android_dev.ui.fragments.ThirdFragment"
        android:label="@string/third_fragment_label"
        tools:layout="@layout/fragment_third">

        <action
            android:id="@+id/action_ThirdFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/ItemFragment"
        android:name="com.example.android_dev.ui.fragments.ItemFragment"
        android:label="item_fragment"
        tools:layout="@layout/fragment_item">
        <action
            android:id="@+id/action_ItemFragment_to_ChuckFirstFragment"
            app:destination="@id/ChuckFirstFragment">
        </action>
        <action
            android:id="@+id/action_ItemFragment_to_JokeFirstFragment"
            app:destination="@id/JokeFirstFragment">
        </action>
    </fragment>

</navigation>